<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="#303C4C">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gb_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forum"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_toRightOf="@id/icon"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/new_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/main_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img"/>
            <ImageView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shape"
                android:paddingLeft="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_likes"
                android:textColor="#823F46"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="-5dp"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:id="@+id/title"/>

            <TextView
                android:id="@+id/name_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith Posted 4/16/16"
                android:paddingStart="10dp"
                android:paddingBottom="5dp"
                android:textSize="12dp"
                android:textColor="#9a9a9a" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#3E4958" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question Content"
                android:paddingStart="10dp"
                android:textColor="#ffffff"
                android:id="@+id/questionContent"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments (2)"
        android:textSize="15dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#823F46" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp"
        android:background="#303C4C">
    </ListView>

</LinearLayout>